alias ls="ls -Flsh --color=auto --group-directories-first"
alias showhiddenfiles='defaults write com.apple.finder AppleShowAllFiles TRUE'
alias hidehiddenfiles='defaults write com.apple.finder AppleShowAllFiles FALSE'

alias gst='git status'
alias gdw='git diff --word-diff'
alias gl='git log --oneline'
alias gt='git log --graph --abbrev-commit --decorate --format=format:"%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)" --all'

alias dev='cd ~/Projects'
alias weather='curl -4 wttr.in/Portland'
alias ld='lazydocker'

